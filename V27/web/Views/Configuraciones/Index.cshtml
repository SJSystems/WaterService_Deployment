

<div ng-app="mainApp">
    <div ng-controller="buscarConfiguracionesCtrl">
        <h2 class="widget-title smaller"> Configuraciones </h2>
        <div class="form-horizontal">
            <div class="form-actions center">
                <button type="button" ng-click="ObtenerConfiguraciones()" class="btn btn-sm btn-primary">
                    <i class="ace-icon fa fa-search icon-on-right bigger-110"></i>
                    Buscar
                </button>
                <button type="button" class="btn btn-sm btn-success" ng-click="editarConfiguracion(configuracion, 'new')">
                    <i class="ace-icon fa fa-plus icon-on-right bigger-110"></i>
                    Agregar
                </button>
            </div>
        </div>

        <div>
            <table id="tb_configuraciones" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Key</th>
                        <th>Value</th>                        
                        <th></th>
                    </tr>
                </thead>
                <tbody ng-repeat="configuracion in configuraciones">
                    <tr>
                        <td>{{configuracion.id}}</td>
                        <td>{{configuracion.key}}</td>
                        <td>{{configuracion.value}}</td>
                      
                        <td>
                            <a href="javascript:void(0);"
                               ng-click="editarConfiguracion(configuracion, 'edit')">
                                <i class="ace-icon fa fa-pencil bigger-130 "></i>
                            </a>
                            <a href="javascript:return false;"
                               ng-click="eliminarConfiguracion(configuracion)">
                                <i class="ace-icon fa fa-trash-o bigger-130 red"></i>
                            </a>                           
                        </td>
                    </tr>

                </tbody>
            </table>
        </div>

    </div>



</div>

<script src="~/js/app/mainApp.js"></script>
<script src="~/js/app/controllers/configuracionesControllers.js"></script>
<script src="~/js/app/app_directives.js"></script>
