

@model WaterService.FrontEnd.WebUI.Models.Pages.Articulo_Index

@*<script src="~/js/Views/Articulos_Edit.js"></script>*@

@{
    Layout = null;
}


<div class="row">

    <div class="col-xs-12">
        
        <!-- <div class="table-responsive"> -->

        <!-- <div class="dataTables_borderWrap"> -->
        <div>
            <table id="tb_resultadoArticulos" class=" dynamicDataTable  table table-striped table-bordered table-hover">
                <thead>
                    <tr>                        
                        <th>Código</th>
                        <th>Articulo</th>
                        <th>Rubro </th>
                        <th>Envase </th>
                        <th>Precio Max. </th>
                        <th>Unidad</th>
                        <th>Medida</th>
                        <th>Cant.por Pack</th>
                        <th>Stock</th>
                        <th>Acciones </th>
                    </tr>
                </thead>

                <tbody>
                    
                    @if (Model!=null )
                    {
                        foreach (var item in Model.ListaBuscarArticulos)
                        {
                            <tr>
                                <td>@item.codigoInterno </td>
                                <td>@item.nombreArticulo </td>
                                <td>@item.rubroArticulo </td>
                                <td>@item.tipoEnvase </td>
                                <td>@item.precioMaximo </td>
                                <td>@item.unidadArticulo </td>
                                <td>@item.medidaUnidad </td>
                                <td>@item.cantidadXPack </td>
                                <td>@item.stockActual </td>

                                <td>
                                    <div class="hidden-sm hidden-xs action-buttons">
                                        @*<a class="blue" href="#">
                                            <i class="ace-icon fa fa-search-plus bigger-130"></i>
                                            	<div class="btn-group">
                                        </a>*@
                                        
											<div class="btn-group">
												<button data-toggle="dropdown" class="btn btn-primary btn-white btn-xs dropdown-toggle">
													Acciones
													<span class="ace-icon fa fa-caret-down icon-on-right"></span>
												</button>

												<ul class="dropdown-menu dropdown-inverse">
                                                                        
													<li>
														<a href="/Articulos/EditArticulo/@item.id">Ver detalles</a>
													</li>
                                                    
                                                    <li class="divider"></li>

													<li>
														<a href="/Articulos/EditArticulo/@item.id">Editar</a>
													</li>
                                                                                                  
                                                    <li class="divider"></li>

                                                    <li>
													    <a  href="javascript:Modelo.EliminarArticulo(@item.id);"><i class="fa fa-trash"></i>Eliminar </a>
													</li>      

                                                    <li class="divider"></li>

                                                    <li>
                                                        <a href="javascript:Modelo.AbrirMovimientoDeStock(@item.id);"><i class="fa fa-plus"></i> Modificar Stock </a>
                                                    </li>                                              

												</ul>
											</div><!-- /.btn-group -->
										

                                        <a class="green" href="/Articulos/EditArticulo/@item.id">
                                            <i class="ace-icon fa fa-pencil bigger-130"></i>
                                        </a>

                                        <a class="red" href="javascript:Modelo.EliminarArticulo(@item.id);">
                                            <i class="ace-icon fa fa-trash-o bigger-130"></i>
                                        </a>
                                        
                                    </div>

                                </td>
                       
                            </tr>
                        }
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

