@model System.Collections.Generic.List<WaterService.Common.Entities.DTOs.VIEW_Logs_DTO>

@{
    Layout = null;
}


<table id="tb_resultadoClientes" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>                        
            <th>Fecha</th>
            <th>Tipo</th>
            <th>Funcionalidad</th>
            <th>Usuario</th>
            <th>Mensaje</th>
        </tr>
    </thead>
    <tbody>
                    
        @if (Model!=null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.fechaHora.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@item.tipoLog</td>
                    <td>@item.funcionalidad</td>
                    <td>@item.nombreApellido</td>
                    <td>@item.mensaje</td>
                </tr>
            }
        }

    </tbody>
</table>
