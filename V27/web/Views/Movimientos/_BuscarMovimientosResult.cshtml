

@model WaterService.FrontEnd.WebUI.Models.Pages.Movimientos_Result

@{
    Layout = null;
}

<div>

    <div class="widget-box">
        <div class="widget-header">
            <h5 class="widget-title">Movimientos de la Cuenta</h5>
        </div>

        <div class="widget-body">
            <div class="widget-main no-padding">
                <div class="row">

                    <div class="col-xs-12">
                        <!-- <div class="table-responsive"> -->
                        <!-- <div class="dataTables_borderWrap"> -->
                        <div>
                            <table id="tb_resultadoMovimientosConsumos" class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>Fecha</th>
                                        <th>Evento</th>
                                        <th>$ Venta-Entrega</th>
                                        <th>$ Cobro</th>
                                        <th>$ Saldo</th>
                                        

                                    </tr>
                                </thead>

                                <tbody>

                                    @if (Model != null)
                                    {
                                        foreach (var item in Model.MovimientosConsumos)
                                        {
                                            <tr>
                                                <td>
                                                    
                                                    @if (item.tipoMovimientosCuentasConsumos_ids == 1)
                                                    {

                                                        <button movimiento_id="@item.id" id="btn_DetallesMovimiento_@item.id" collapsed="true" class="btn_DetallesMovimiento ">
                                                            <i class="btn_icono ace-icon fa fa-chevron-up"></i>
                                                        </button>
                                                    }
                                                   

                                                </td>
                                                <td>@item.fechaMovimiento.ToString("dd/MM/yy")</td>

                                                <td>
                                                    
                                                    @if (item.cobroCuenta_id.HasValue)
                                                    {
                                                        <a href="/VentasEntregas/ObtenerReciboDeCobroConsumos?idCobroConsumo=@(item.cobroCuenta_id)" target="_blank">
                                                            @item.eventoDescripcion
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        @item.eventoDescripcion
                                                    }

                                                </td>

                                                <td>@item.debitoCuenta</td>

                                                <td>@item.creditoCuenta</td>

                                                <td>@item.saldoActual</td>

                                               

                                            </tr>
                                            <tr class="hide" id="tr_detalleMovimiento_@item.id" class="tr_detallesMovimiento">
                                                <td colspan="7" id="td_contenidoDetalleMovimiento_@item.id"
                                                    class="td_contenidoDetalleMovimiento" datosobtenidos="false" collapsed="true"></td>
                                            </tr>

                                        }
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <br />

    <div class="widget-box">
        <div class="widget-header">
            <h5 class="widget-title">Movimientos de Facturación</h5>
        </div>
        <div class="widget-body">
            <div class="widget-main no-padding">

                <div class="row">

                    <div class="col-xs-12">
                        <div>
                            <table id="tb_resultadoMovimientosFacturas" class="   table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>Fecha</th>
                                        <th>Evento</th>
                                        <th>$ Factura</th>
                                        <th>$ Cobro</th>
                                        <th>$ Saldo</th>
                                       

                                    </tr>
                                </thead>

                                <tbody>

                                    @if (Model != null)
                                    {
                                        foreach (var item in Model.MovimientosFacturacion)
                                        {
                                            <tr>
                                                <td>
                                                   @if (item.tipoMovimientosFacturacion_ids == 1)
                                                   {
                                                    <button movimientofactura_id="@item.id" id="btn_DetallesMovimientoFactura_@item.id" collapsed="true" class="btn_DetallesMovimientoFactura ">
                                                        <i class="btn_icono ace-icon fa fa-chevron-up"></i>
                                                    </button>
                                                   }
                                                </td>

                                                <td>@item.fechaMovimiento.ToString("dd/MM/yy")</td>

                                                <td> @item.eventoDescripcion</td>
                                                
                                                <td>@item.debitoCuenta</td>

                                                <td>@item.creditoCuenta</td>

                                                <td>@item.saldoActual</td>

                                                
                                            </tr>

                                            <tr class="hide" id="tr_detalleMovimientoFactura_@item.id" class="tr_detallesMovimientoFactura">
                                                <td colspan="8" id="td_contenidoDetalleMovimientoFactura_@item.id"
                                                    class="td_contenidoDetalleMovimientoFactura" datosobtenidos="false" collapsed="true"></td>
                                            </tr>
                                        }
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>



</div>