<div class="col-xs-12 col-sm-12 widget-container-col ui-sortable" style="min-height: 109px;"
     ng-app="mainApp" ng-controller="buscarRangosDeComprobantesFisicosController">
    <div class="widget-box widget-color-dark ui-sortable-handle" style="opacity: 1; z-index: 0;">
        <div class="widget-header widget-header-small">
            <h2 class="widget-title smaller">Comprobantes físicos</h2>
        </div>
        <div class="widget-body">
            <div class="widget-main">

                <div class="row" style="margin-bottom:10px">
                    
                    <div class="col-sm-4">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label class="col-sm-4 control-label no-padding-right center">Reparto</label>
                                    <div class="col-sm-8">
                                        <select ng-model="repartoId" style="width: 200px"
                                                ng-options="reparto.id as reparto.nombreReparto for reparto in repartos"></select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-4">
                        <div class="form-group">
                            <label class="control-label col-xs-12 col-sm-4 no-padding-right center">Creado Desde</label>
                            <div class="col-xs-12 col-sm-8">
                                <div class="clearfix">
                                    <div class="input-group">
                                        <input class="validate form-control date-picker col-xs-10 col-sm-5" ng-model="fechaDesde" fieldtype="text" name="fecha" placeholder="dd/mm/yyyy" type="text">
                                        <span class="input-group-addon">
                                            <i class="fa fa-calendar bigger-110"></i>
                                        </span>
                                    </div>
                                </div>
                                <div class="mensajeValidacion help-block"></div>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-4">
                        <div class="form-group">
                            <label class="control-label col-xs-12 col-sm-4 no-padding-right center">Creado Hasta</label>
                            <div class="col-xs-12 col-sm-8">
                                <div class="clearfix">
                                    <div class="input-group">
                                        <input class="validate form-control date-picker col-xs-10 col-sm-5" ng-model="fechaHasta" fieldtype="text" name="fecha" placeholder="dd/mm/yyyy" type="text">
                                        <span class="input-group-addon">
                                            <i class="fa fa-calendar bigger-110"></i>
                                        </span>
                                    </div>
                                </div>
                                <div class="mensajeValidacion help-block"></div>
                            </div>
                        </div>
                    </div>

                </div>
                
                <div class="row">
                    <div class="col-sm-4">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label class="col-sm-4 control-label no-padding-right center">Prefijo</label>
                                    <div class="col-sm-8">
                                        <input class="form-control col-xs-10 col-sm-5" ng-model="prefijo" fieldtype="text" name="fecha" type="text">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-sm-4">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label class="col-sm-4 control-label no-padding-right center">Nro</label>
                                    <div class="col-sm-8">
                                        <input class="form-control col-xs-10 col-sm-5" ng-model="nroComprobante" fieldtype="text" name="fecha" type="text">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-4">
                        <div class="checkbox">
                            <label>
                                <input name="form-field-checkbox" ng-model="rangoActivo" type="checkbox" class="ace">
                                <span class="lbl"> Activos</span>
                            </label>
                        </div>
                    </div>
                  
                </div>
               
            </div>
        </div>

        <div class="widget-toolbox padding-8 clearfix">
          
            <button type="button" style="margin-left: 10px" ng-click="buscar()" class="btn btn-sm btn-primary pull-right">
                <i class="ace-icon fa fa-search icon-on-right bigger-110"></i>
                Buscar Rangos
            </button>
           <a href="javascript:void(0)" ng-click="abrirNuevo()" class="btn btn-sm btn-success pull-right">
                <i class="ace-icon fa fa-plus icon-on-right bigger-110"></i>
                Nuevo
            </a>
        </div>
    </div>
    
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Tipo</th>
                <th>Prefijo</th>
                <th>Desde</th>
                <th>Hasta</th>
                <th>Reparto</th>
                <th>Estado</th>
                <th>Alta</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="rango in rangos">

                <td>{{rango.tipoComprobanteFisico}}</td>
                <td>{{rango.prefijo}}</td>
                <td>{{rango.desde}}</td>
                <td>{{rango.hasta}}</td>
                <td>{{rango.nombreReparto}}</td>
                <td>{{rango.activo?'Activo':'No Activo'}}</td>
                <td>{{rango.fechaDeAlta.slice(6, -2)  |  date:'dd/MM/yyyy'}}</td>
                <td>
                    <button ng-click="eliminarRango(rango, $index)" type="button" class="btn btn-white btn-pink btn-sm">
                        <i class="ace-icon fa fa-times red2"></i>
                    </button>
                    <button ng-show="rango.activo" ng-click="intactivarRango(rango)" type="button" class="btn btn-warning btn-sm">
                        <i class="ace-icon fa fa-hand-o-down red2"></i>
                    </button>
                </td>

            </tr>
        </tbody>
    </table>
</div>

<script src="~/js/app/mainApp.js"></script>
<script src="~/js/app/app_directives.js"></script>
<script src="~/js/app/controllers/comprobantesFisicosControllers.js"></script>
