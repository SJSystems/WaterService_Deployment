<div ng-app="mainApp" ng-controller="facturasController">

    <div class="page-header">
        <h1>
            Facturas del cliente:
            <strong>{{cliente.nombreCliente}}</strong>
        </h1>
    </div>


    <label>Periodo de búsqueda</label>
    <div class="row">

        <div class="col-xs-8 col-sm-4">
            <div class="input-daterange input-group">
                <input ng-model="fechaDesde" type="text" class=" form-control date-picker" placeholder="fecha desde" ng-model="desde" name="start" />
                <span class="input-group-addon">
                    <i class="fa fa-exchange"></i>
                </span>
                <input ng-model="fechaHasta" type="text" class=" form-control date-picker" placeholder="fecha hasta" ng-model="hasta" name="end" />
                <span class="input-group-btn">
                    <button type="button" class="btn btn-purple btn-sm" ng-click="obtenerFacturas()">
                        Buscar
                        <i class="ace-icon fa fa-search icon-on-right bigger-110"></i>
                    </button>
                </span>
            </div>

            <!-- /section:plugins/date-time.datepicker -->
        </div>
    </div>

    <br />
    <div class="widget-box">
        <div class="widget-header">
            <h5 class="widget-title">Facturas</h5>
        </div>

        <div class="widget-body">
            <div class="widget-main no-padding">
                <div class="row">

                    <div class="col-xs-12">
                        <!-- <div class="table-responsive"> -->
                        <!-- <div class="dataTables_borderWrap"> -->
                        <div>
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>n°</th>
                                        <th>Fecha</th>
                                        <th>Vencimientos</th>
                                        <th>Monto</th>
                                        <th>Saldo</th>
                                        <th>Estado</th>
                                        <th>CAE</th>
                                        <th>Comprobante</th>
                                        <th>Observaciones</th>
                                        <th></th>
                                    </tr>
                                </thead>

                                <tbody>

                                    <tr ng-repeat="item in facturas">
                                       
                                        <td>
                                            {{(item.nroFactura )}}
                                            <a ng-show="item.pathFactura!=null && item.pathFactura != ''"
                                               target="blank" href="/UsuariosClientes/DescargarFactura?id={{item.id}}">
                                                <i class="fa fa-download"></i>
                                            </a>
                                        </td>
                                        <td>{{item.fechaFactura.fechaMovimiento.slice(6, -2)  |  date:'dd/MM/yyyy'}} </td>
                                        <td>
                                            {{item.fechaVencimiento1.slice(6, -2)  |  date:'dd/MM/yyyy'}}<br>
                                            {{item.fechaVencimiento2.slice(6, -2)  |  date:'dd/MM/yyyy'}}<br>
                                            {{item.fechaVencimiento3.slice(6, -2)  |  date:'dd/MM/yyyy'}}
                                        </td>
                                        <td>${{item.montoFacturaTotal}}</td>
                                        <td>${{item.saldoPendiente}}</td>
                                        <td>{{item.estadoFactura}}</td>
                                        <td>{{item.cae}}</td>
                                        <td>{{item.numeroComprobante}}</td>
                                        <td>{{item.observaciones}}</td>
                                        <td></td>

                                    </tr>

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


<script src="~/js/app/controllers/usuariosClientesControllers.js"></script>