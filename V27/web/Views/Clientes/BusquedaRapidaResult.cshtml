@model List<WaterService.Common.Entities.DTOs.VIEW_Clientes_DTO>
@{
    Layout = null;
}

<div class="row">

    <div class="col-xs-12">
        
        <div>
            <table id="tb_resultadoClientes" class=" table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th></th>                        
                        <th>ID</th>
                        <th>Nombre / Razón Social</th>
                        <th>Tipo </th>
                        <th>Domicilio</th>
                        <th>Reparto</th>
                        <th>Estado</th>
                        <th class="hide"></th>
                    </tr>
                </thead>
                
                <tbody>
                    
                    @if (Model!=null )
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <button type="button" class="btn btn-white btn-success hasTooltip btn_seleccionarCliente" ng-click="seleccionarCliente(@item.cliente_id)" onclick="SeleccionarCliente(@item.cliente_id);" cliente_id="@item.cliente_id" title="Seleccionar">
                                        <i class="ace-icon fa fa-check green"></i>
                                    </button>

                                </td>
                                <td>@item.cliente_id</td>
                                <td>
                                    @item.nombreCliente 
                                    @if (!item.datosCompletos)
                                    {
                                        <span class="label label-warning">
                                            <i class="ace-icon fa fa-exclamation-triangle bigger-120"></i>
                                        </span>
                                    }
                                </td>
                                <td>@item.tipoCliente</td>
                                <td>@item.domicilioCompleto</td>
                                <td>@item.nombreReparto</td>
                                <td>@item.estadoCliente</td>
                                <td  class="hide">
                                    <div class="hidden-sm hidden-xs action-buttons">
                                        @*<a class="blue" href="#">
                                            <i class="ace-icon fa fa-search-plus bigger-130"></i>
                                            	<div class="btn-group">
                                        </a>*@
                                        
                                        <div class="btn-group">
                                            <button data-toggle="dropdown" class="btn btn-primary btn-white btn-xs dropdown-toggle">
                                                Acciones
                                                <span class="ace-icon fa fa-caret-down icon-on-right"></span>
                                            </button>

                                            <ul class="dropdown-menu dropdown-inverse">

                                                @if (!item.datosCompletos)
                                                {
                                                    <li>
                                                        <a class="red" href="javascript:Modelo.CompletarCliente(@item.cliente_id);"><i class="fa fa-check-square-o"></i>Completar cliente</a>
                                                    </li>
                                                    <li class="divider"></li>
                                                }

                                                <li>
                                                    <a href="/Clientes/ClienteDisplay/@item.cliente_id">Ver detalles</a>
                                                </li>
                                                    
                                                <li class="divider"></li>

                                                <li>
                                                    <a href="/Clientes/EditCliente/@item.cliente_id">Editar</a>
                                                </li>

                                                <li>
                                                    <a href="/Clientes/EditDomicilio/@item.cliente_id">Domicilio</a>
                                                </li>												
                                                <li>
                                                    <a href="/Clientes/EditReparto/@item.cliente_id">Reparto</a>
                                                </li>
                                                <li>
                                                    <a href="/Clientes/DatosFacturacion/@item.cliente_id">Facturación</a>
                                                </li>
                                                <li>
                                                    <a href="/Clientes/EditContactos/@item.cliente_id">Contactos</a>
                                                </li>
                                                <li>
                                                    <a href="/Clientes/EditCliente/@item.cliente_id">Comodato</a>
                                                </li>     
                                                <li>
                                                    <a href="/Clientes/EditCliente/@item.cliente_id">Abonos</a>
                                                </li>                                                                                                       
                                                <li class="divider"></li>
                                                <li>
                                                    <a  href="javascript:Modelo.EliminarCliente(@item.cliente_id);"><i class="fa fa-trash"></i>Eliminar cliente</a>
                                                </li>
                                                    

                                            </ul>
                                        </div><!-- /.btn-group -->
										

                                        <a class="green" href="/Clientes/EditCliente/@item.cliente_id">
                                            <i class="ace-icon fa fa-pencil bigger-130"></i>
                                        </a>

                                        @if (!item.datosCompletos)
                                        {
                                            <a class="red" href="javascript:Modelo.CompletarCliente(@item.cliente_id);">
                                                <i class="fa fa-check-square-o"></i>
                                            </a>
                                        }
                                        
                                    </div>

                                </td>
                       
                            </tr>
                        }
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

