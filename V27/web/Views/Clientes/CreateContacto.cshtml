@model WaterService.FrontEnd.WebUI.Models.Pages.Cliente_Contactos
@{Layout = null;}

  @using (Html.BeginForm("CreateContacto", "Clientes", FormMethod.Post, new { id = "form_create", name = "form_create", @class = "form-horizontal", role = "form" }))
    {
      @Html.HiddenFor(x => x.ModeloContacto.cliente_id);
      @Html.HiddenFor(x => x.ModeloContacto.id);
      
		<!-- <legend>Form</legend> -->
		<fieldset>

            <div class="form-group">
				<label class="control-label col-xs-12 col-sm-3 no-padding-right">Tipo de Contacto</label>
				<div class="col-xs-12 col-sm-9">
					<div class="clearfix">
						@Html.DropDownListFor(x => x.ModeloContacto.tipoContacto_ids, new SelectList(Model.TiposDeConctactos, "valor_ids", "valorTexto"), new { @class="input-group col-xs-10 col-sm-6"})
                    </div>                                
                    <div class="mensajeValidacion help-block"></div>
				</div>
			</div>
                                                  
            <div class="form-group">
				<label class="control-label col-xs-12 col-sm-3 no-padding-right">Nombre persona</label>
				<div class="col-xs-12 col-sm-9">
					<div class="clearfix">
						@Html.TextBoxFor(x=>x.ModeloContacto.nombrePersona, new { fieldType="text", errorMessage="Ingrese el nombre del contacto", @class="validate col-xs-10 col-sm-8 ", placeholder="nombre y apellido del contacto",type="text"})								
                    </div>                                
                    <div class="mensajeValidacion help-block"></div>
				</div>
			</div>

            <div class="form-group">
				<label class="control-label col-xs-12 col-sm-3 no-padding-right">Sector</label>
				<div class="col-xs-12 col-sm-9">
					<div class="clearfix">
						@Html.DropDownListFor(x => x.ModeloContacto.sector_ids, new SelectList(Model.Sectores, "valor_ids", "valorTexto"), new { @class="input-group col-xs-10 col-sm-6"})
                    </div>                                
                    <div class="mensajeValidacion help-block"></div>
				</div>
			</div>

            <div class="form-group">
				<label class="control-label col-xs-12 col-sm-3 no-padding-right">Teléfono</label>
				<div class="col-xs-12 col-sm-9">
					<div class="clearfix">
						@Html.TextBoxFor(x=>x.ModeloContacto.telefono, new { fieldType="text", errorMessage="Ingrese el sector de la empresa", @class="col-xs-10 col-sm-8 ", placeholder="",type="text"})
                    </div>                                
                    <div class="mensajeValidacion help-block"></div>
				</div>
			</div>

            <div class="form-group">
				<label class="control-label col-xs-12 col-sm-3 no-padding-right">Celular</label>
				<div class="col-xs-12 col-sm-9">
					0 @Html.TextBoxFor(x => x.ModeloContacto.caracteristicaCelular, new { fieldType = "text", style = "width: 64px;", errorMessage = "Ingrese un celular", placeholder = "", type = "text" })
                    15 @Html.TextBoxFor(x => x.ModeloContacto.celular, new { fieldType = "text", style = "width: 170px;", errorMessage = "Ingrese un celular", placeholder = "", type = "text" })
				</div>
			</div>

            <div class="form-group">
				<label class="control-label col-xs-12 col-sm-3 no-padding-right">Email</label>
				<div class="col-xs-12 col-sm-9">
					<div class="clearfix">
						@Html.TextBoxFor(x=>x.ModeloContacto.email, new { fieldType="text", errorMessage="Ingrese el sector de la empresa", @class="col-xs-10 col-sm-8 ", placeholder="",type="text"})
                    </div>                                
                    <div class="mensajeValidacion help-block"></div>
				</div>
			</div>
                                
            <div class="form-group">
				<label class="control-label col-xs-12 col-sm-3 no-padding-right">Observaciones</label>
				<div class="col-xs-12 col-sm-9">
					<div class="clearfix">
						@Html.TextBoxFor(x=>x.ModeloContacto.observaciones, new { fieldType="text", errorMessage="Ingrese el sector de la empresa", @class="col-xs-10 col-sm-8 ", placeholder="",type="text"})
                    </div>                                
                    <div class="mensajeValidacion help-block"></div>
				</div>
			</div> 
    
            <div class="form-group">
		    <label class="control-label col-xs-12 col-sm-4 no-padding-right"></label>
                <div class="col-xs-12 col-sm-8">
                    <div class="clearfix">
                        <label>
                            @Html.CheckBoxFor(x=>x.ModeloContacto.contactoPrincipal)
                            <span class="lbl"> Contacto principal</span>
                        </label>
                    </div>                                
                    <div class="mensajeValidacion help-block"></div>
                </div>
                
            </div>  
            
            <div class="form-group">
                <label class="control-label col-xs-12 col-sm-4 no-padding-right"></label>
                <div class="col-xs-12 col-sm-8">
                    <div class="clearfix">
                        <label>
                            @Html.CheckBoxFor(x => x.ModeloContacto.porComprobantesFiscales)
                            <span class="lbl"> Enviar comprobantes fiscales</span>
                        </label>
                    </div>
                </div>
            </div>  
            
            <div class="form-group">
                <label class="control-label col-xs-12 col-sm-4 no-padding-right"></label>
                <div class="col-xs-12 col-sm-8">
                    <div class="clearfix">
                        <label>
                            @Html.CheckBoxFor(x => x.ModeloContacto.porCuentaCorriente)
                            <span class="lbl"> Enviar remitos y recibos</span>
                        </label>
                    </div>
                </div>
            </div>  

		</fieldset>
                    
		<div class="form-actions center">
			<button type="button" id="btn_guardarContacto" onclick="Modelo.GuardarContacto();" class="btn btn-sm btn-success">
				Guardar cambios
				<i class="ace-icon fa fa-arrow-right icon-on-right bigger-110"></i>
			</button>
		</div>
    } 
