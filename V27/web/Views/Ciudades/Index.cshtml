

<div ng-app="mainApp">
    <div ng-controller="buscarCiudadesCtrl">
        <h2 class="widget-title smaller">Ciudades</h2>
        <div class="form-horizontal">
            <div class="form-actions center">
                <button type="button" ng-click="Init()" class="btn btn-sm btn-primary">
                    <i class="ace-icon fa fa-search icon-on-right bigger-110"></i>
                    Buscar
                </button>
                <button type="button" class="btn btn-sm btn-success" ng-click="EditarCiudad(ciudad, 'new')">
                    <i class="ace-icon fa fa-plus icon-on-right bigger-110"></i>
                    Agregar
                </button>
            </div>
        </div>

        <div>
            <table id="tb_ciudades" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Codigo Externo</th>
                        <th>Ciudad</th>                        
                        <th>Provincia</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody ng-repeat="ciudad in ciudades">
                    <tr>
                        <td>{{ciudad.id}}</td>
                        <td>{{ciudad.codigoExterno}}</td>
                        <td>{{ciudad.nombreCiudad}}</td>
                        <td>{{ciudad.provincia}}</td>                        
                        <td>
                            <div class="btn-group">
                                <button data-toggle="dropdown" class="btn btn-primary btn-white btn-xs dropdown-toggle">
                                    Acciones
                                    <span class="ace-icon fa fa-caret-down icon-on-right"></span>
                                </button>
                                <ul class="dropdown-menu dropdown-inverse">
                                    <li>
                                        <a href="javascript:return false;"
                                           ng-click="EliminarCiudad(ciudad.id)">
                                            Eliminar
                                        </a>
                                    </li>
                                    <li>
                                        <a href="javascript:void(0);"
                                           ng-click="EditarCiudad(ciudad, 'edit')">
                                            Editar
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>

                </tbody>
            </table>
        </div>

    </div>



</div>

<script src="~/js/app/mainApp.js"></script>
<script src="~/js/app/controllers/ciudadesControllers.js"></script>
<script src="~/js/app/app_directives.js"></script>
