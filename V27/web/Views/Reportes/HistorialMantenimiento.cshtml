<div ng-app="mainApp" ng-controller="repMantenimientosPorDispenserController">

    <div class="widget-box widget-color-dark ui-sortable-handle" style="opacity: 1; z-index: 0;">
        <div class="widget-header widget-header-small">
            <h2 class="widget-title smaller">
                Historial de Mantenimientos
            </h2>
        </div>
        <div class="widget-body">
            <div class="widget-main">
                <div class="row">
                    <div class="col-sm-4">
                        <div class="row">
                            <ctr-periodo fechas-periodo="desdeHasta" titulo="Fecha Creación"></ctr-periodo>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="widget-toolbox padding-8 clearfix">
            <button type="button" ng-click="buscar()" class="btn btn-sm btn-primary pull-right">
                <i class="ace-icon fa fa-search icon-on-right bigger-110"></i>
                Buscar
            </button>
            <button type="button" ng-click="ExportarCSV()" class="btn btn-sm btn-success pull-right">
                <i class="ace-icon fa fa-search icon-on-right bigger-110"></i>
                Export CSV
            </button>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <table class="table table-striped table-bordered table-hover"
                   st-table="displayMantenimientos"
                   st-safe-src="mantenimientos">
                <thead>
                    <tr>
                        <th class="center" st-sort="id">
                            Id
                        </th>
                        <th st-sort="fechaHora">
                            Fecha
                        </th>
                        <th st-sort="comentarios">
                            Comentarios
                        </th>
                        <th st-sort="condicionActual">
                            Condicion Actual
                        </th>
                        <th st-sort="estadoDispenserActual">
                            Estado Dispenser Actual
                        </th>
                        <th st-sort="ubicacionActual">
                            Ubicacion Actual
                        </th>
                        <th st-sort="trabajos">
                            Trabajos
                        </th>
                    </tr>
                    <tr>
                        <th colspan="10">
                            <input st-search="" class="form-control" placeholder="Buscar en esta tabla" type="text" />
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="mantenimiento in displayMantenimientos">
                        <td>
                            {{mantenimiento.id}}
                        </td>
                        <td>
                            {{mantenimiento.fechaHora}}
                        </td>
                        <td>
                            {{mantenimiento.comentarios}}
                        </td>
                        <td>
                            {{mantenimiento.condicionActual}}
                        </td>
                        <td>
                            {{mantenimiento.estadoDispenserActual}}
                        </td>
                        <td>
                            {{mantenimiento.ubicacionActual}}
                        </td>
                        <td>
                            {{mantenimiento.trabajos}}
                        </td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="5" class="text-center">
                            <div st-pagination="" st-items-by-page="15" st-displayed-pages="8"></div>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div><!-- /.span -->
    </div>
</div>

<script src="~/js/app/controllers/reportes/appReportes.js"></script>
<script src="~/js/app/controllers/reportes/directivesReportes.js"></script>
<script src="~/js/app/controllers/reportes/repMantenimientosPorDispenser.js"></script>
<script src="~/js/app/app_directives.js"></script>