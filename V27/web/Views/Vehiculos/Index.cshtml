

<div ng-app="mainApp">
    <div ng-controller="buscarVehiculosCtrl">
        <h2 class="widget-title smaller">Vehículos</h2>
        <div class="form-horizontal">
            <div class="form-actions center">
                <button type="button" ng-click="GetVehiculos()" class="btn btn-sm btn-primary">
                    <i class="ace-icon fa fa-search icon-on-right bigger-110"></i>
                    Buscar
                </button>
                <button type="button" class="btn btn-sm btn-success" ng-click="EditarVehiculo(vehiculo, 'new')">
                    <i class="ace-icon fa fa-plus icon-on-right bigger-110"></i>
                    Agregar
                </button>
            </div>
        </div>

        <div>
            <table id="tb_vehiculos" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Vehiculo</th>
                        <th>Estado</th>
                        <th>Marca </th>
                        <th>Año</th>
                        <th>Kilometraje</th>
                        <th>Carga en Kg.</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody ng-repeat="vehiculo in vehiculos">
                    <tr>
                        <td>{{vehiculo.id}}</td>
                        <td>{{vehiculo.nombreVehiculo}}</td>
                        <td>{{vehiculo.estadoVehiculo}}</td>
                        <td>{{vehiculo.marcaVehiculo}}</td>
                        <td>{{vehiculo.anio}}</td>
                        <td>{{vehiculo.kilometrajeActual}}</td>
                        <td>{{vehiculo.kilosDeCarga}}</td>
                        <td>
                            <div class="btn-group">
                                <button data-toggle="dropdown" class="btn btn-primary btn-white btn-xs dropdown-toggle">
                                    Acciones
                                    <span class="ace-icon fa fa-caret-down icon-on-right"></span>
                                </button>
                                <ul class="dropdown-menu dropdown-inverse">
                                    <li>
                                        <a href="javascript:return false;"
                                           ng-click="EliminarVehiculo(vehiculo.id)">
                                            Eliminar
                                        </a>
                                    </li>
                                    <li>
                                        <a href="javascript:void(0);"
                                           ng-click="EditarVehiculo(vehiculo, 'edit')">
                                            Editar
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>

                </tbody>
            </table>
        </div>

    </div>


</div>

<script src="~/js/app/mainApp.js"></script>
<script src="~/js/app/controllers/vehiculosControllers.js"></script>
<script src="~/js/app/app_directives.js"></script>
