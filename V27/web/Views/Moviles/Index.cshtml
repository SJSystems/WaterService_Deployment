

<div ng-app="mainApp">
    <div ng-controller="buscarMovilesCtrl">
        <div class="form-horizontal">
            <div class="form-actions center">
                <button type="button" ng-click="ObtenerMoviles()" class="btn btn-sm btn-primary">
                    <i class="ace-icon fa fa-search icon-on-right bigger-110"></i>
                    Buscar
                </button>
                <button type="button" class="btn btn-sm btn-success" ng-click="EditarMovil(null, 'new')">
                    <i class="ace-icon fa fa-plus icon-on-right bigger-110"></i>
                    Agregar
                </button>
            </div>
        </div>

        <div>
            <table id="tb_moviles" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Móvil</th>
                        <th>Numero de teléfono</th>
                        <th>Activo </th>                        
                        <th></th>
                    </tr>
                </thead>
                <tbody ng-repeat="movil in moviles">
                    <tr>
                        <td>{{movil.id}}</td>
                        <td>{{movil.descripcion}}</td>
                        <td>{{movil.numeroTelefono}}</td>
                        <td>{{movil.activo?"Si":"No"}}</td>
                        
                        <td>
                            <div class="btn-group">
                                <button data-toggle="dropdown" class="btn btn-primary btn-white btn-xs dropdown-toggle">
                                    Acciones
                                    <span class="ace-icon fa fa-caret-down icon-on-right"></span>
                                </button>
                                <ul class="dropdown-menu dropdown-inverse">
                                    <li>
                                        <a href="javascript:return false;"
                                           ng-click="EliminarMovil(movil.id)">
                                            Eliminar
                                        </a>
                                    </li>
                                    <li>
                                        <a href="javascript:void(0);"
                                           ng-click="EditarMovil(movil, 'edit')">
                                            Editar
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>

                </tbody>
            </table>
        </div>

    </div>


</div>

<script src="~/js/app/mainApp.js"></script>
<script src="~/js/app/controllers/movilesControllers.js"></script>
<script src="~/js/app/app_directives.js"></script>
