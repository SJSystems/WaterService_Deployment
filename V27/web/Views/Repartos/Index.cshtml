

<div ng-app="mainApp">
    <div ng-controller="buscarRepartosCtrl">
        <div class="form-horizontal">
            <div class="form-actions center">
                <button type="button" ng-click="ObtenerRepartos()" class="btn btn-sm btn-primary">
                    <i class="ace-icon fa fa-search icon-on-right bigger-110"></i>
                    Buscar
                </button>
                <button type="button" class="btn btn-sm btn-success" ng-click="NuevoReparto()">
                    <i class="ace-icon fa fa-plus icon-on-right bigger-110"></i>
                    Agregar Reparto
                </button>
            </div>
        </div>

        <div>
            <table id="tb_cheques" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Reparto</th>
                        <th>Nombre y Apellido</th>
                        <th>Vehiculo </th>
                        <th>Movil</th>
                        <th>Telefono</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody ng-repeat="reparto in repartos">
                    <tr>
                        <td>{{reparto.id}}</td>
                        <td>{{reparto.nombreReparto}}</td>
                        <td>{{reparto.nombreApellido}}</td>
                        <td>{{reparto.nombreVehiculo}}</td>
                        <td>{{reparto.descripcionMovil}}</td>
                        <td>{{reparto.numeroTelefono}}</td>
                        <td>
                            <div class="btn-group">
                                <button data-toggle="dropdown" class="btn btn-primary btn-white btn-xs dropdown-toggle">
                                    Acciones
                                    <span class="ace-icon fa fa-caret-down icon-on-right"></span>
                                </button>
                                <ul class="dropdown-menu dropdown-inverse">
                                    <li>
                                        <a href="javascript:return false;"
                                           ng-click="EliminarReparto(reparto.id)">
                                            Eliminar
                                        </a>
                                    </li>
                                    <li>
                                        <a href="javascript:void(0);"
                                           ng-click="EditarReparto(reparto)">
                                            Editar
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>

                </tbody>
            </table>
        </div>

    </div>

    <div ng-controller="nuevoRepartoCtrl">
        <div id="dialog_repartos" title="{{accion}}">
            <div class="col-xs-12 col-sm-12 widget-container-col ui-sortable">

                <div class="widget-body">
                    <div class="widget-main">
                        <div class="row">
                            <div class="form-horizontal col-sm-8">
                                
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label no-padding-right"> Repartidor </label>
                                            <div class="col-sm-9">

                                                <select class="input-group col-xs-10 col-sm-8"
                                                        ng-model="reparto.repartidor_id"
                                                        ng-options="item.id as item.nombreApellido for item in usuarios"></select>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label no-padding-right"> Reparto</label>
                                            <div class="col-sm-9">
                                                <input ng-model="reparto.nombreReparto" class="validate form-control col-xs-10 col-sm-10 "
                                                       fieldtype="text" type="text">
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <label class="col-sm-3 control-label no-padding-right"> Código </label>
                                                <div class="col-sm-9">
                                                    <input ng-model="reparto.codigoReparto" class="validate form-control col-xs-10 col-sm-10 "
                                                           fieldtype="text" type="text">
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label no-padding-right"> Movil </label>
                                            <div class="col-sm-9">

                                                <select class="input-group col-xs-10 col-sm-8"
                                                        ng-model="reparto.movil_id"
                                                        ng-options="item.id as item.descripcion for item in moviles"></select>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label no-padding-right"> Vehiculo </label>
                                            <div class="col-sm-9">

                                                <select class="input-group col-xs-10 col-sm-8"
                                                        ng-model="reparto.vehiculoPredeterminado_id"
                                                        ng-options="item.id as item.nombreVehiculo for item in vehiculos"></select>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label no-padding-right"> Factor</label>
                                            <div class="col-sm-9">

                                                <input ng-model="reparto.factorVentas" class="form-control col-xs-10 col-sm-10 "
                                                       fieldtype="text" type="text">
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-sm-6">
                                    <button class="btn btn-sm btn-success pull-right" ng-click="Save()">
                                        Guardar
                                        <i class="ace-icon fa fa-arrow-right icon-on-right bigger-110"></i>
                                    </button>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<script src="~/js/app/mainApp.js"></script>
<script src="~/js/app/controllers/repartosControllers.js"></script>
<script src="~/js/app/app_directives.js"></script>
