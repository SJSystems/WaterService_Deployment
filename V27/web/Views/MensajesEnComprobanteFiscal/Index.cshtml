
<div class="col-xs-12 col-sm-12 widget-container-col ui-sortable" style="min-height: 109px;"
     ng-app="mainApp" ng-controller="buscarMensajeEnComprobantesCtrl">

    <div class="widget-box widget-color-dark ui-sortable-handle" style="opacity: 1; z-index: 0;">
        <div class="widget-header widget-header-small">
            <h2 class="widget-title smaller"> Mensajes en comprobantes fiscal </h2>
        </div>
        <div class="widget-body">
            <div class="widget-main">

                <div class="row" style="margin-bottom:10px">

                    <div class="col-sm-5">
                        <div class="form-group">
                            <label class="control-label col-xs-12 col-sm-4 no-padding-right center">Creado Desde</label>
                            <div class="col-xs-12 col-sm-8">
                                <div class="clearfix">
                                    <div class="input-group">
                                        <input class="validate form-control date-picker col-xs-10 col-sm-5" ng-model="filtros.fechaDesde" fieldtype="text" name="fecha" placeholder="dd/mm/yyyy" type="text">
                                        <span class="input-group-addon">
                                            <i class="fa fa-calendar bigger-110"></i>
                                        </span>
                                    </div>
                                </div>
                                <div class="mensajeValidacion help-block"></div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-xs-12 col-sm-4 no-padding-right center">Creado Hasta</label>
                            <div class="col-xs-12 col-sm-8">
                                <div class="clearfix">
                                    <div class="input-group">
                                        <input class="validate form-control date-picker col-xs-10 col-sm-5" ng-model="filtros.fechaHasta" fieldtype="text" name="fecha" placeholder="dd/mm/yyyy" type="text">
                                        <span class="input-group-addon">
                                            <i class="fa fa-calendar bigger-110"></i>
                                        </span>
                                    </div>
                                </div>
                                <div class="mensajeValidacion help-block"></div>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-1"></div>

                    <div class="col-sm-2">
                        <div class="checkbox">
                            <label>
                                <input name="form-field-checkbox" ng-model="filtros.paraRemitos" type="checkbox" class="ace" checked>
                                <span class="lbl"> Remitos</span>
                            </label>
                        </div>

                        <div class="checkbox">
                            <label>
                                <input name="form-field-checkbox" ng-model="filtros.paraRecibos" type="checkbox" class="ace" checked>
                                <span class="lbl"> Recibos</span>
                            </label>
                        </div>
                    </div>

                    <div class="col-sm-2">
                        <div class="checkbox">
                            <label>
                                <input name="form-field-checkbox" ng-model="filtros.paraFacturas" type="checkbox" class="ace" checked>
                                <span class="lbl"> Facturas</span>
                            </label>
                        </div>

                        <div class="checkbox">
                            <label>
                                <input name="form-field-checkbox" ng-model="filtros.paraEmails" type="checkbox" class="ace" checked>
                                <span class="lbl"> Email</span>
                            </label>
                        </div>
                    </div>

                    <div class="col-sm-2">
                        <div class="checkbox">
                            <label>
                                <input name="form-field-checkbox" ng-model="filtros.activo" type="checkbox" class="ace" checked>
                                <span class="lbl"> Solo Activos</span>
                            </label>
                        </div>

                        <div class="checkbox">
                            <label>
                                <input name="form-field-checkbox" ng-model="filtros.esInformacion" type="checkbox" class="ace" checked>
                                <span class="lbl"> Es Informacion</span>
                            </label>
                        </div>
                    </div>

                </div>

                <div class="row" >
                    <div class="form-group">
                        <label class="control-label col-xs-12 col-sm-3 no-padding-right">Cliente:</label>
                        <div class="col-xs-12 col-sm-9">
                            <div class="clearfix">
                                <span class="block input-icon input-icon-right">
                                   
                                    <input class="form-control" type="text" ng-model="clienteSelected"
                                           uib-typeahead="  cliente as ( cliente.nombreCliente + ' - ' + cliente.tipoCliente + ' - ' + cliente.domicilioCompleto ) for cliente in clientes | filter:$viewValue " />
                                    
                                    <i ng-show="clienteSelected!=null" title="Cliente seleccionado" class="ace-icon fa fa-check-circle green"></i>
                                </span>                            
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="widget-toolbox padding-8 clearfix">
            <button type="button" style="margin-left: 10px" ng-click="buscarMensajes()" class="btn btn-sm btn-primary pull-right">
                <i class="ace-icon fa fa-search icon-on-right bigger-110"></i>
                Buscar
            </button>

            <button type="button" class="btn btn-sm btn-success pull-right" ng-click="abrirDialogoAgregar()">
                <i class="ace-icon fa fa-plus icon-on-right bigger-110"></i>
                Agregar
            </button>
        </div>
    </div>

    <mensajes-en-comprobantes on-obtener-mensajes="onObtenerMensajes"></mensajes-en-comprobantes>

</div>

<script src="~/js/app/mainApp.js"></script>
<script src="~/js/app/app_directives.js"></script>
<script src="~/js/app/controllers/mensajesEnComprobantesFiscalControllers.js"></script>
<script src="~/js/app/Servicios/abmServices.js"></script>

