
<div ng-app="app_Devoluciones" ng-controller="devolucionesCtrl">
    
    <div class="col-xs-12 col-sm-12 widget-container-col ui-sortable">
    
        <div class="widget-box ui-sortable-handle">
            <div class="widget-header">
                <h5 class="widget-title">Registrar una devolución</h5>
                <div class="widget-toolbar">
                    <a href="#" data-action="fullscreen" class="orange2">
                        <i class="ace-icon fa fa-expand"></i>
                    </a>
                </div>
            </div>
            <div class="widget-body">
                <div class="widget-main">
                    
                    <div class="row">
		                
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="col-sm-2 control-label no-padding-right"> Cliente</label>
                                <div class="col-sm-10">
                                    <div class="input-group">
                                        <input type="text" class="form-control search-query" id="txt_clienteSeleccionado" placeholder="Seleccione un cliente" ng-model="clienteSeleccionado.nombreCliente" readonly="true">
                                        <span class="input-group-btn">
                                            <button type="button"  ng-click="abrirDialogoBusquedaCliente()" class="btn btn-purple btn-sm">
                                                <i class="ace-icon fa fa-search icon-on-right bigger-110"></i>
                                            </button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        @* <div class="col-sm-1">
                            <input type="text" placeholder="id cliente" id="txt_clienteId" ng-model="clienteSeleccionado.id" class="col-xs-10 col-sm-12">
                        </div>*@
                    
                        <div class="col-sm-6">
		                    
                            <div class="form-group">
                                <label class="col-sm-2 control-label no-padding-right"> Fecha</label>
                                <div class="col-sm-5">
                                
                                    <div class="input-group">
                                        <input class="validate form-control date-picker col-xs-10 col-sm-5" ng-model="fechaDevolucion"  errormessage="Fecha de devolución" fieldtype="text" id="txt_FechaDevolucion" name="txt_FechaDevolucion" placeholder="dd/mm/yyyy" type="text"> 
                                        <span class="input-group-addon">
                                            <i class="fa fa-calendar bigger-110"></i>
                                        </span>
                                    </div>

                                </div>
                            </div>
                        
                        </div>

                    </div>
                    <br/>
                    <div class="row">
                        
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="col-sm-2 control-label no-padding-right"> </label>
                                <div class="col-sm-10">
                                    
                                    <div class="clearfix">
                                        <input type="checkbox" ng-model="esHojaDeRuta"> Proviene de una hoja de ruta</input>
                                    </div>
                                    <div class="mensajeValidacion help-block"></div>

                                </div>
                            </div>
                        </div>
                        

                        <div class="col-sm-6">
                            <div class="form-group" ng-show="esHojaDeRuta">
                                <label class="col-sm-2 control-label no-padding-right"> Reparto</label>
                                <div class="col-sm-10">
                                    
                                    <div class="clearfix">
                                        <select ng-model="repartoSeleccionado" ng-options="reparto.nombreReparto for reparto in repartosDisponibles" class="col-sm-6"></select><br>
                                    </div>
                                    <div class="mensajeValidacion help-block"></div>

                                </div>
                            </div>
                        </div>
                        
                    </div>
                    <br/>
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th >Artículo disponible</th>
                                <th class="col-sm-2 center">Cantidad devuelta</th>
                                <th class="">Motivo</th>
                                <th class="col-sm-2 center"></th>
                            </tr>
                        </thead>
                        <tbody id="tbody_articulos">
                            <tr ng-repeat="articulo in articulosRecientes">
                                    
                                <td class=""><h4>({{articulo.codigoInterno}})-{{articulo.nombreArticulo}}</h4> </td>
                                <td><input type="number" ng-model="articulo.cantidadDevuelta"/> </td>
                                <td><select ng-model="articulo.motivoDevolucion" ng-options="motivo.valorTexto for motivo in motivosDeDevolucion"></select></td>
                                <td class="center"><input type="checkbox" class="" ng-model="articulo.esCambioDirecto"> Cambio directo</input></td>
                                    
                            </tr>
                        </tbody>

                    </table>

                    
                    <div id="div_SeccionCliente"></div>
                </div>
            </div>
            <div class="widget-toolbox padding-8 clearfix">
            
            <div class="col-sm-6">
                
                <button class="btn btn-lg btn-success pull-right" ng-click="confirmarDevolucion()">
                    <i class="ace-icon fa fa-check"></i>
                    Confirmar Devolución
                </button>

            </div>

        </div>
        </div>

    </div>

    <div id="div_BuscarClienteDialogo" title="-- Seleccione un cliente --"></div>

</div>
@*<script src="~/js/Views/Devoluciones_Create.js"></script>*@
<script src="~/js/app/controllers/devolucionesController.js"></script>
<script src="~/js/app/app_Devoluciones.js"></script>
