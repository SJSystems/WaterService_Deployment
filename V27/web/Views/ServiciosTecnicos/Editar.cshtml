<div ng-app="mainApp" ng-controller="editarSoporteTecnico">
    <div class="page-header">
        <h1>
            Editar Soporte Técnico
        </h1>
    </div>

    <div class="form-horizontal">
        
        <div class="form-group">
            <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Cliente </label>
            <div class="col-sm-9">
                <label type="text" placeholder="Username" class="col-xs-10 col-sm-12">{{servicioTecnico.nombreCliente}} </label>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Lugar </label>
            <div class="col-sm-9">
                <label type="text" class="col-xs-10 col-sm-12">{{servicioTecnico.domicilioCompleto}} </label>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Síntoma </label>
            <div class="col-sm-9">
                <select class="col-sm-8" ng-model="servicioTecnico.sintoma_ids"
                        ng-options="sintoma.valor_ids as sintoma.valorTexto for sintoma in sintomas"></select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Cantidad de dispensers </label>
            <div class="col-sm-9">
                <input type="text" ng-model="servicioTecnico.cantidadDispensers" class="col-xs-10 col-sm-5">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Sector / Ubicación </label>
            <div class="col-sm-9">
                <input type="text" ng-model="servicioTecnico.sectorUbicacion" class="col-xs-10 col-sm-8">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Responsable en cliente </label>
            <div class="col-sm-9">
                <input type="text" ng-model="servicioTecnico.responsableEnCliente" class="col-xs-10 col-sm-8"> 
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Teléfono del responsable </label>
            <div class="col-sm-9">
                <input type="text" ng-model="servicioTecnico.telefonoResponsable" class="col-xs-10 col-sm-8">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Técnico </label>
            <div class="col-sm-9">
                <label type="text" id="form-field-1" class="col-xs-10 col-sm-8">{{servicioTecnico.usuarioTecnico}} </label>
            </div>
        </div>
        <div class="clearfix form-actions">
            <div class="col-md-offset-3 col-md-9">
                <button class="btn btn-info" type="button" ng-click="guardar()">
                    <i class="ace-icon fa fa-check bigger-110"></i>
                    Guardar cambios
                </button>

            </div>
        </div>
    </div>
</div>
<script src="~/js/app/mainApp.js"></script>
<script src="~/js/app/controllers/serviciosTecnicoControllers.js"></script>
<script src="~/js/app/controllers/serviciosTecnicoCommonControllers.js"></script>
<script src="~/js/app/app_directives.js"></script>